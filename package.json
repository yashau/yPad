{
  "name": "ypad",
  "version": "1.6.2",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local --persist-to .wrangler/state",
    "deploy": "npm run build && wrangler deploy",
    "build": "vite build",
    "preview": "npm run build && wrangler dev --local",
    "check": "npm run check:client && npm run check:types",
    "check:client": "npx svelte-check --workspace client",
    "check:types": "npx tsc --noEmit",
    "db:create": "wrangler d1 create ypad-db",
    "db:migrate": "wrangler d1 migrations apply ypad-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply ypad-db --remote",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "e2e": "npx playwright test",
    "e2e:screenshot": "npx playwright test manual"
  },
  "dependencies": {
    "fast-diff": "^1.3.0",
    "hono": "latest",
    "y-protocols": "^1.0.7",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "latest",
    "@internationalized/date": "^3.10.1",
    "@lucide/svelte": "^0.561.0",
    "@playwright/test": "^1.57.0",
    "@sveltejs/vite-plugin-svelte": "latest",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "latest",
    "@types/estree": "^1.0.8",
    "@types/node": "latest",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "autoprefixer": "latest",
    "bits-ui": "^2.14.4",
    "clsx": "latest",
    "highlight.js": "latest",
    "jsdom": "^25.0.0",
    "postcss": "latest",
    "shadcn-svelte": "latest",
    "svelte": "latest",
    "tailwind-merge": "latest",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "latest",
    "typescript": "latest",
    "vite": "latest",
    "vitest": "^2.1.0",
    "wrangler": "latest"
  }
}
